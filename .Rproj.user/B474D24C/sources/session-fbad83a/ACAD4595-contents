@article{bullock_predicting_2003,
  title = {Predicting {{Support}} for {{Welfare Policies}}: {{The Impact}} of {{Attributions}} and {{Beliefs About Inequality}}},
  shorttitle = {Predicting {{Support}} for {{Welfare Policies}}},
  author = {Bullock, Heather E. and Williams, Wendy R. and Limbert, Wendy M.},
  year = {2003},
  month = jun,
