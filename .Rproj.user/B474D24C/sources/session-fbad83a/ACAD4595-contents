@article{dickinson_adolescent_1990,
  title = {Adolescent Representations of Socio-Economic Status},
  author = {Dickinson, Julie},
  year = {1990},
  month = nov,
  journal = {British Journal of Developmental Psychology},
  volume = {8},
  number = {4},
  pages = {351--371},
  issn = {2044-835X},
